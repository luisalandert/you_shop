      <%= f.label :cnpj %>
      <%= f.text_field :cnpj %>
    </div>
    <div>
      <%= f.label :address %>
      <%= f.text_field :address, placeholder: 'ex: Rua, nÃºmero, complemento, cidade, estado', size: '42' %>
    </div>
